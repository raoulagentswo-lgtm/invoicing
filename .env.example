# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/facturation
DB_HOST=localhost
DB_PORT=5432
DB_USER=facturation_user
DB_PASSWORD=secure_password
DB_NAME=facturation

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRY=30d
JWT_REFRESH_EXPIRY=90d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Email Configuration
EMAIL_FROM=noreply@facturation.local
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_EXPIRY_HOURS=24

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MS=60000

# AWS S3 (for logo uploads)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=facturation-uploads

# Application
APP_NAME=Facturation
APP_DESCRIPTION=Application de facturation pour PME
